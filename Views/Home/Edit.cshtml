@model IEnumerable<MVCWebApplication.Models.Users>
    @{
        ViewBag.Title = "Edit";
    }

    <div class="container">
        <div class="row">
            <div class="col-md-6">
@foreach (var list in Model)
{
                <form action="/Home/UpdateUser" method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1">First Name</label>
                        <input type="text" class="form-control" name="fname" value="@Html.DisplayFor(ModelItem => list.fname)">
                        <input type="hidden" class="form-control" name="id" value="@Html.DisplayFor(ModelItem => list.id)">
                      </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Last Name</label>
                        <input type="text" class="form-control" name="lname" value="@Html.DisplayFor(ModelItem => list.lname)">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email Name</label>
                        <input type="text" class="form-control" name="email" value="@Html.DisplayFor(ModelItem => list.email)">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Update"/>
                </form>
}
               </div>
            <div class="col-md-6">


            </div>
        </div>
    </div>

